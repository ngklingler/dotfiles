[user]
	name = Nick Klingler
	email = nick@localhost
[pull]
    rebase = true
[push]
    default = current
[alias]
    track = "!git branch --set-upstream-to=origin/`git symbolic-ref --short HEAD`"
    sync = "!git track && git pull && git push --force-with-lease"
    pf = "push --force-with-lease"
    car = "commit --amend --reuse-message=HEAD"
    cs = "!git add --all && git commit -m 'autocommit' && git sync"
[core]
    safeclrf = true
    autocrlf = input ;; on windows this should be set to true
    fileMode = false
[rerere]
    enabled = true
[submodule]
    recurse = true
[init]
    defaultBranch = main
[rebase]
    autoStash = true
[commit]
    verbose = true
